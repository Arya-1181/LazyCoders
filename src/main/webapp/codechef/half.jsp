#include "bits/stdc++.h"
using namespace std;

int main(){
    int n;

        cin >> n;
        int arr[n];
        for(int i = 0; i < n; i++){
            cin >> arr[i];
            
        }

    int s=sizeof(arr)/sizeof(arr[0]);
    sort(arr , arr+s);
    int mid = (n)/2;
    swap(arr[mid], arr[n-1]);
    
    int st = mid + 1;
    int ed = n - 2;
    
    
    for(int i = ed; i >=st; i--){
        cout << arr[i]<<" ";
    }
    cout<<>arr[n-1];

    return 0;
}
