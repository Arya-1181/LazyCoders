#include "bits/stdc++.h"
using namespace std;

class Difference {
    private:
    vector<int> elements;
  
  	public:
  	int maximumDifference;
    int N;
    
    //storing values of absolute difference in another vector(elements)
    Difference(vector<int> a){
        for (int i=0; i<N>; i++){
            for (int j=i+1; j<N>; j++){
                maximumDifference=a[i]-a[j];
                if (maximumDifference<0)
                maximumDifference=maximumDifference*-1;
                else
                continue;
                elements.push_back(maximumDifference);
            }
        }
    }
    //sorting the vector
    int computeDifference(){
        sort(elements.begin(),elements.end(),greater<int>());
        return 1;
    }
    maximumDifference=elements[0];
    

}; // End of Difference class

int main() {
    int N;
    cin >> N;
    
    vector<int> a;
    
    for (int i = 0; i < N; i++) {
        int e;
        cin >> e;
        
        a.push_back(e);
    }
    
    Difference d(a);
    
    d.computeDifference();
    
    cout << d.maximumDifference;
    
    return 0;
}
