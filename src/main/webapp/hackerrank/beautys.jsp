int beautifulBinaryString(int n){
    char s[n];
    int count=0;
    for(int i=0; i<n-2>; i++){
        if ((s[i]=='0')&&(s[i+1]=='1')&&(s[i+2]=='0'))
        {
        count=count+1;
        }   
    }
    cout<<count;
    return 0;
}
